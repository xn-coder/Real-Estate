
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Ensure the user document exists before trying to read the role
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isSeller() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller';
    }
    
    function isPartner() {
      if (!isSignedIn()) { return false; }
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return userRole in ['affiliate', 'super_affiliate', 'associate', 'channel', 'franchisee'];
    }

    // Users can be read by any signed-in user, but only updated by themselves or an admin.
    match /users/{userId} {
      allow create: if true;
      allow read: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // Documents subcollection can only be managed by the owner.
      match /documents/{docId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Publicly readable collections
    match /properties/{propertyId} {
      allow read: if true;
      allow create, update: if isSeller() || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /property_types/{typeId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /resources/{resourceId} {
        allow read: if true;
        allow write: if isAdmin() || isSeller();
    }

    match /reward_offers/{offerId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /files/{fileId} {
        allow read: if true;
        allow write: if isSignedIn();
    }

    // Authenticated access collections
    match /app_settings/{settingId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /leads/{leadId} {
      allow read: if isSignedIn();
      allow create: if isPartner();
      allow update, delete: if isAdmin() || isSeller();
    }
    
    match /appointments/{appointmentId} {
        allow read: if isSignedIn();
        allow create: if isPartner();
        allow update, delete: if isAdmin() || isSeller();
    }
    
    match /inquiries/{inquiryId} {
        allow read, write: if isSignedIn();
    }

    match /wallets/{walletId} {
        allow read: if isOwner(walletId) || isAdmin();
        allow write: if isAdmin(); // Only admins can directly modify wallets
    }
    
    match /withdrawal_requests/{reqId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isAdmin() || isSeller();
    }
    
    match /reward_transactions/{txId} {
        allow read: if isSignedIn();
        allow write: if isAdmin() || isSeller();
    }

    match /support_tickets/{ticketId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isAdmin();
    }
    
     match /receivables/{recId} {
        allow read, write: if isSeller() || isAdmin();
    }
    
    match /payables/{payId} {
        allow read, write: if isSeller() || isAdmin();
    }
    
     match /messages/{msgId} {
        allow read, write: if isSignedIn();
    }
  }
}
