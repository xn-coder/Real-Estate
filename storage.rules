rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow read access to all files for anyone
    // This is useful for public images, like profile pictures or property photos
    match /{allPaths=**} {
       allow read: if true;
    }

    // Allow authenticated users to write to a user-specific folder
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
